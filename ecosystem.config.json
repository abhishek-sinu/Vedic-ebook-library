{
  "apps": [{
    "name": "vedic-ebooks",
    "script": "server.js",
    "cwd": "/var/www/vedic-ebooks",
    "instances": 1,
    "autorestart": true,
    "watch": false,
    "max_memory_restart": "1G",
    "env": {
      "NODE_ENV": "production",
      "PORT": 3001
    },
    "error_file": "/var/www/vedic-ebooks/logs/err.log",
    "out_file": "/var/www/vedic-ebooks/logs/out.log",
    "log_file": "/var/www/vedic-ebooks/logs/combined.log"
  }]
}
